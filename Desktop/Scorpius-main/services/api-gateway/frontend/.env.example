# Scorpius Cybersecurity Dashboard - Environment Configuration Template
# Copy this file to .env and update the values according to your setup

# ===========================================
# REQUIRED API ENDPOINTS (MUST BE SET)
# ===========================================

# Main API Base URL - Core application API
VITE_API_BASE=http://localhost:8000/api

# Scanner API Base URL - Smart contract scanner service
VITE_SCANNER_API_BASE=http://localhost:8001/api

# Mempool Monitor API Base URL - Mempool monitoring service
VITE_MEMPOOL_API_BASE=http://localhost:8002/api

# MEV Bot API Base URL - MEV detection and trading service
VITE_MEV_API_BASE=http://localhost:8003/api

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Authentication Domain
VITE_AUTH_DOMAIN=auth.scorpius.io

# Auth Token Refresh Threshold (milliseconds)
VITE_AUTH_REFRESH_THRESHOLD=300000

# WebSocket Base URL
VITE_WS_BASE=ws://localhost:8000/ws

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable mock mode for development (true/false)
VITE_ENABLE_MOCK_MODE=false

# Enable WebSocket connections (true/false)
VITE_ENABLE_WEBSOCKETS=true

# Enable analytics tracking (true/false)
VITE_ENABLE_ANALYTICS=false

# Enable debug mode with verbose logging (true/false)
VITE_ENABLE_DEBUG_MODE=true

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application Display Name
VITE_APP_NAME=Scorpius Cybersecurity Dashboard

# Application Version
VITE_APP_VERSION=1.0.0

# Environment Type (development/staging/production)
VITE_APP_ENV=development

# Logging Level (debug/info/warn/error)
VITE_LOG_LEVEL=debug

# ===========================================
# LEGACY/ALTERNATIVE API CONFIGURATION
# ===========================================

# Alternative API URL (used by some legacy services)
VITE_API_URL=http://localhost:5000

# Alternative Base URL (used by some services)
VITE_API_BASE_URL=http://localhost:3001

# ===========================================
# PRODUCTION EXAMPLE VALUES
# ===========================================

# For production, update these URLs to your actual API endpoints:
# VITE_API_BASE=https://api.scorpius.io/v1
# VITE_SCANNER_API_BASE=https://scanner-api.scorpius.io/v1
# VITE_MEMPOOL_API_BASE=https://mempool-api.scorpius.io/v1
# VITE_MEV_API_BASE=https://mev-api.scorpius.io/v1
# VITE_WS_BASE=wss://ws.scorpius.io
# VITE_APP_ENV=production
# VITE_LOG_LEVEL=warn
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_ANALYTICS=true
